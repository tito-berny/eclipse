package Seguretat;

import java.lang.reflect.Array;
import java.util.Scanner;

public class Seguretat {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int num ;
		String frase = "";
		String abc = "abcdefghijklmn√±opqrstuvwyz ";
		
		Scanner scn = new Scanner(System.in);
		
		System.out.println("METODE CESAR");
		System.out.println("-------------");
		System.out.println("");
		System.out.println("Dona'm un numero de cifrat");
		num = scn.nextInt();
		
		System.out.println("Dona'm una frase a cifrar");
		frase = scn.nextLine();
		frase = frase.toLowerCase();
		
		char arr[] = frase.toCharArray();
		char ab[] = abc.toCharArray();
		
		
		for(int i=0;i<arr.length;i++){
		    System.out.println("Data at ["+i+"]="+arr[i]);
		}
		for(int i=0;i<ab.length;i++){
		    System.out.println("Data at ["+i+"]="+ab[i]);
		}
		System.out.println(frase);
		
		
		

	}

